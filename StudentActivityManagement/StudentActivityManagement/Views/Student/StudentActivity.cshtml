@model StudentActivityMenagement.Models.ActivityViewModel.StudentActivityViewModel
@{
    ViewData["Title"] = "Activity";
}
<h1> @ViewData["Name"]</h1>
<div class="row">
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"> Schedule</th>
                    <th scope="col">Grade</th>
                    <th scope="col">Attendance</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Schedules.ToList().Capacity; i++)
                {
                    <tr>
                        <th scope="row">@Model.Schedules.ElementAt(i).Occurence</th>
                        @if (Model.ActivityInfos.ElementAt(i).Attendance != 0)
                        {
                            <th scope="row">@Model.ActivityInfos.ElementAt(i).Grade</th>
                        }
                        else
                        {
                            <th scope="row">-</th>
                        }
                        @if (Model.ActivityInfos.ElementAt(i).Attendance != 0)
                        {
                            <th scope="row">Yes</th>
                        }
                        else
                        {
                            <th scope="row">No</th>
                        }
                        @*<th scope="row">@Model.ActivityInfos.ElementAt(i).Attendance</th>*@
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}