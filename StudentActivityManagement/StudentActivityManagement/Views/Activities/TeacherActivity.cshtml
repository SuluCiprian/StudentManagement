@model StudentActivityMenagement.Models.ActivityViewModel.TeacherActivityViewModel
@{
    ViewData["Title"] = "Activity";
}

<div class="row">
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" rowspan="2">Student Name</th>
                    <th scope="col" colspan="2">Activity 1</th>
                <tr>
                    <th scope="col">Grade</th>
                    <th scope="col">Attendance</th>
                </tr>
                </tr>
            </thead>
            <tbody>
                @for (var iterator = 0; iterator < Model.StudentsOnActivity.ToList().Capacity; iterator++)
                {
                    <tr>
                        <th scope="row" rowspan="2">@Model.StudentsOnActivity.ElementAt(iterator).Name</th>
                    <tr>
                        <th scope="row">@Model.ActivityInfos.ElementAt(iterator).Grade</th>
                        <th scope="row">@Model.ActivityInfos.ElementAt(iterator).Attendance</th>
                        <td>
                            <a asp-action="Edit" asp-route-id="">Edit</a> |
                            <a asp-action="Details" asp-route-id="">Details</a> |
                            <a asp-action="Delete" asp-route-id="">Delete</a>
                        </td>
                    </tr>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}